{
  String message=join("Argument(s) are different! Wanted:",wanted,"-> at " + new Location(),"Actual invocation has different arguments:",actual,"-> at " + actualLocation,"");
  if (JUnitTool.hasJUnit()) {
    throw JUnitTool.createArgumentsAreDifferentException(message,wanted,actual);
  }
 else {
    throw new ArgumentsAreDifferent(message);
  }
}
