{
  ActualArgumentsAreDifferent cause=new ActualArgumentsAreDifferent(join("Actual invocation has different arguments:",actual.toString()));
  cause.setStackTrace(actualStackTrace.getStackTrace());
  if (JUnitTool.hasJUnit()) {
    throw JUnitTool.createArgumentsAreDifferentException(join("Argument(s) are different! Wanted:",wanted.toString()),cause,wanted.toString(),actual.toString());
  }
 else {
    throw new ArgumentsAreDifferent(join("Argument(s) are different! Wanted:",wanted.toString()),cause);
  }
}
