{
  when(mock.simpleMethod()).thenThrow(new RuntimeException(),new IllegalArgumentException(),new NullPointerException());
  try {
    mock.simpleMethod();
    fail();
  }
 catch (  RuntimeException expected) {
  }
  try {
    mock.simpleMethod();
    fail();
  }
 catch (  IllegalArgumentException expected) {
  }
  try {
    mock.simpleMethod();
    fail();
  }
 catch (  NullPointerException expected) {
  }
  try {
    mock.simpleMethod();
    fail();
  }
 catch (  NullPointerException expected) {
  }
}
