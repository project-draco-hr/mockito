    cl.loadClass("org.mockitoutil.ClassLoadersTest$ClassUsingInterface1");
  }
 catch (  NoClassDefFoundError e) {
    assertThat(e.getMessage()).contains("org/mockitoutil/ClassLoadersTest$Interface1");
  }
}
