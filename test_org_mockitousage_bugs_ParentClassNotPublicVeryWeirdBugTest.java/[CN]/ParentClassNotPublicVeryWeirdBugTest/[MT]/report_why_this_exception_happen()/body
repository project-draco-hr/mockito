{
  ClassForMocking clazzMock=mock(ClassForMocking.class);
  try {
    Mockito.when(clazzMock.isValid()).thenReturn(true);
  }
 catch (  MissingMethodInvocationException e) {
    assertThat(e.getMessage()).contains("the parent of the mocked class is not public.").contains("It is a limitation of the mock engine");
  }
}
