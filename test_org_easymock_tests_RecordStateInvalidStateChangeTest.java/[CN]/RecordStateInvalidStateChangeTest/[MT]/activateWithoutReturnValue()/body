{
  mock.oneArg(false);
  try {
    control.replay();
    fail("IllegalStateException expected");
  }
 catch (  IllegalStateException e) {
    assertEquals("missing behavior definition for the preceeding method call oneArg(false)",e.getMessage());
    assertTrue("stack trace must be cut",Util.getStackTrace(e).indexOf(RecordState.class.getName()) == -1);
  }
}
