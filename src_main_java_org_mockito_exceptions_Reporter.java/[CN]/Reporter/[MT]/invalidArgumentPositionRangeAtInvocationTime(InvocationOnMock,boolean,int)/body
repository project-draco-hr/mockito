  throw new MockitoException(join("Invalid argument index for the current invocation of method : "," -> " + safelyGetMockName(invocation.getMock()) + "."+ invocation.getMethod().getName()+ "()","",(willReturnLastParameter ? "Last parameter wanted" : "Wanted parameter at position " + argumentIndex) + " but " + possibleArgumentTypesOf(invocation),"The index need to be a positive number that indicates a valid position of the argument in the invocation.","However it is possible to use the -1 value to indicates that the last argument should be returned.",""));
