{
  MessageDigest messageDigest=createMessageDigest("MD5");
  byte[] buffer=new byte[4096];
  try {
    while (true) {
      int nread=instr.read(buffer);
      if (nread < 0) {
        break;
      }
      messageDigest.update(buffer,0,nread);
    }
  }
  finally {
    instr.close();
  }
  return messageDigest.digest();
}
