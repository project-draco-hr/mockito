{
  MockitoAssertionError error=null;
  long startTime=System.currentTimeMillis();
  while (System.currentTimeMillis() - startTime <= timeoutMillis) {
    try {
      delegate.verify(data);
      return;
    }
 catch (    MockitoAssertionError e) {
      error=e;
      sleep(pollingPeriod);
    }
  }
  if (error != null) {
    throw error;
  }
}
