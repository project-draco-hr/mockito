{
  mock.varargs(1,2);
  try {
    verify(mock).varargs(1,1000);
    fail();
  }
 catch (  ArgumentsAreDifferent e) {
    String expected="\n" + "Argument(s) are different! Wanted:" + "\n"+ "iMethods.varargs(1, 1000);";
    assertEquals(expected,e.getMessage());
    assertEquals(e.getCause().getClass(),ActualArgumentsAreDifferent.class);
    String expectedCause="\n" + "Actual invocation has different arguments:" + "\n"+ "iMethods.varargs(1, 2);";
    assertEquals(expectedCause,e.getCause().getMessage());
  }
}
