{
  stub(mock.size()).toThrow(new RuntimeException());
  stubVoid(mock).toThrow(new RuntimeException()).on().clone();
  try {
    mock.size();
    fail();
  }
 catch (  RuntimeException e) {
  }
  try {
    mock.clone();
    fail();
  }
 catch (  RuntimeException e) {
  }
  verify(mock).size();
  verify(mock).clone();
  verifyNoMoreInteractions(mock);
}
