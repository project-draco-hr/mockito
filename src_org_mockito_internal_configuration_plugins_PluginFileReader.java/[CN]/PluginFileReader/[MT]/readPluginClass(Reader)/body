{
  BufferedReader lineReader=new BufferedReader(reader);
  try {
    String line;
    while ((line=lineReader.readLine()) != null) {
      String stripped=stripCommentAndWhitespace(line);
      if (stripped.length() > 0) {
        return stripped;
      }
    }
    return null;
  }
  finally {
    closeQuietly(lineReader);
  }
}
