{
  checkState();
  checkAccess(access,Opcodes.ACC_PUBLIC + Opcodes.ACC_PRIVATE + Opcodes.ACC_PROTECTED+ Opcodes.ACC_STATIC+ Opcodes.ACC_FINAL+ Opcodes.ACC_VOLATILE+ Opcodes.ACC_TRANSIENT+ Opcodes.ACC_SYNTHETIC+ Opcodes.ACC_ENUM+ Opcodes.ACC_DEPRECATED);
  CheckMethodAdapter.checkIdentifier(name,"field name");
  CheckMethodAdapter.checkDesc(desc,false);
  if (signature != null) {
    CheckMethodAdapter.checkFieldSignature(signature);
  }
  if (value != null) {
    CheckMethodAdapter.checkConstant(value);
  }
  FieldVisitor av=cv.visitField(access,name,desc,signature,value);
  return new CheckFieldAdapter(av);
}
