{
  mock=mock(IMethods.class);
  final Thread[] listeners=new Thread[3];
  for (int i=0; i < listeners.length; i++) {
    listeners[i]=new Thread(){
      @SuppressWarnings("deprecation") @Override public void run(){
        when(mock.simpleMethod(getId())).thenReturn(getId() + "").thenReturn("foo").thenReturn("bar");
        stubVoid(mock).toThrow(new RuntimeException(getId() + "")).toReturn().toThrow(new RuntimeException()).on().differentMethod();
      }
    }
;
    listeners[i].start();
  }
  for (int i=0; i < listeners.length; i++) {
    listeners[i].join();
  }
}
